<% include ../partials/header %>

<div class="container ">
  <p>Retailer Name:</p>
  <h3><%=result.retailerName%></h3>
  <p>Return Date:</p>
  <p><%=result.returnDate%></p>
  <h3>Items List</h3>
  <table class="table table-hover  ">
    <thead>
      <tr>
        <th>Item Name</th>
        <th>MRP</th>
        <th>PKD</th>
        <th>QTY</th>
        <th>Reason</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach((item)=> {%>
      <tr>
        <td><%=item.name%></td>
        <td><%=item.mrp%></td>
        <td><%=item.pkd%></td>
        <td><%=item.qty%></td>
        <td><%=item.reason%></td>
        <td></td>
      </tr>
      <% })%>
    </tbody>
  </table>

  <h3>Status Of Return</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% status.forEach((st)=> {%>
      <tr>
        <td><%=st.description%></td>
        <td><%=st.time%></td>
        <td></td>
      </tr>
      <% })%>
    </tbody>
  </table>

  <button
    onClick="window.location.href='/distributor/returns/<%=result.returnId%>/confirm'"
  >
    Confirm
  </button>
</div>

<% include ../partials/footer %>
